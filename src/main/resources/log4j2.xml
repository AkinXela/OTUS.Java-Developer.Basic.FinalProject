<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n"/>
        </Console>
<!--        <File name="FILE" fileName="${basePath}/log.log" append="true">-->
<!--            <PatternLayout pattern="%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n"/>-->
<!--        </File>-->
        <RollingFile name="RollingFILE" fileName="${basePath}/faker_server.log"
                     filePattern="${basePath}/$${date:yyyy-MM}/faker_server-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout>
<!--                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>-->
                <Pattern>%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %C (%F:%L) - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFILE"/>
        </Root>
    </Loggers>
</Configuration>